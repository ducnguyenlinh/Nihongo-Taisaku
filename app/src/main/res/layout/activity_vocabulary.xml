<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:mContext="com.example.admin.nihongotaisaku.activities.VocabularyActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEAN"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mean"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="SENTENCE"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dimen_10dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_sentence"
                    android:layout_gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_japanese"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="JAPANESE"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_picutre"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PICTURE"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/touch_lyt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_weight="6"
        android:layout_gravity="center" 
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lyt4"
            android:background="@color/colorAccent"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv4_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/dimen_50dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt3"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@color/iron"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img3_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt2"
            android:background="#ffff00"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/tv2_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:gravity="left"
                android:layout_weight="1"
                android:textSize="@dimen/dimen_20dp"/>
            <TextView
                android:id="@+id/tv2_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:gravity="left"
                android:layout_weight="1"
                android:textSize="@dimen/dimen_20dp"/>
            <TextView
                android:id="@+id/tv2_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:gravity="left"
                android:layout_weight="1"
                android:textSize="@dimen/dimen_20dp"/>
            <TextView
                android:id="@+id/tv2_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:gravity="left"
                android:layout_weight="1"
                android:textSize="@dimen/dimen_20dp"/>
            <TextView
                android:id="@+id/tv2_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:gravity="left"
                android:layout_weight="1"
                android:textSize="@dimen/dimen_20dp"/>
            <TextView
                android:id="@+id/tv2_6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:gravity="left"
                android:layout_weight="1"
                android:textSize="@dimen/dimen_20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt1"
            android:background="@color/colorFAB1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv1_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:layout_weight="1"
                android:textSize="@dimen/dimen_50dp"
                android:textColor="#fff"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv1_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:layout_weight="1"
                android:textSize="@dimen/dimen_50dp"
                android:textColor="#fff"
                android:gravity="center"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
